services:
  redis:
    image: redis:8.2.1-alpine # latest alpine version on 26.08.2025
    container_name: redis_container
    restart: unless-stopped
    env_file: .env
    ports:
      - "${REDIS_PORT}:6379"
    volumes:
      - ./.redis_data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "-a", "PING"]
      interval: 5s
      timeout: 3s
      retries: 5

  nats:
    image: nats:latest
    container_name: nats_container
    entrypoint: /nats-server
    restart: unless-stopped
    env_file: .env
    ports:
      - "${NATS_PORT}:4222"
      - "${NATS_MONITORING_PORT}:8222"
    volumes:
      - ./nats_broker/.nats_data:/data
      - ./nats_broker/config/server.conf:/config/server.conf
    healthcheck:
      test: ["CMD", "nats-server", "-s1"]
      interval: 5s
      timeout: 3s
      retries: 5

  nats-nui:
    image: ghcr.io/nats-nui/nui:latest
    container_name: nats-nui_container
    restart: unless-stopped
    env_file: .env
    ports:
      - "${NUI_PORT}:31311"
    volumes:
      - ./.nui_data/db:/db
    depends_on:
      nats:
        condition: service_healthy
